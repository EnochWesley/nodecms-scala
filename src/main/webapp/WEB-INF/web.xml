<?xml version="1.0" encoding="UTF-8"?>

<web-app>
  <servlet>
    <servlet-name>nodecms</servlet-name>
    <servlet-class>nodecms.scalatra.NodeServlet</servlet-class>
    <init-param>
      <param-name>nodeActorSystemName</param-name>
      <param-value>nodecms</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>nodecms</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
</web-app>
